{
    "name": "opin/whirlwind",
    "description": "OPIN Whirlwind distribution forked from Acquia's Lighting distrubution",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "drupal/coder": "8.*",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",
        "behat/behat": "^3.0",
        "se/selenium-server-standalone": "^2.53",
        "composer/composer": "^1.3",
        "drupal/console": "1.0.1",
        "drupal/media_entity_generic": "^1.0"
    },
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "cweagans/composer-patches": "^1.6.0",
        "acquia/lightning": "~3.1.4",
        "drupal/core": "~8.5.0",
        "drupal/adminimal_theme": "^1.3",
        "drupal/admin_toolbar": "^1.20",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/linkit": "^5.0",
        "drupal/paragraphs": "^1.2",
        "drupal/menu_block": "^1.5",
        "drupal/module_filter": "^3.1",
        "drupal/field_group": "^3.0",
        "drupal/twig_field_value": "^1.1",
        "drupal/svg_image_field": "^1.1",
        "drupal/workbench_access": "^1.0",
        "drupal/twig_tweak": "^2.0",
        "drupal/content_access": "^1.0",
        "drupal/contact_storage": "^1.0",
        "drupal/moderation_sidebar": "^1.0",
        "drupal/address": "^1.3",
        "drupal/addtoany": "^1.8",
        "drupal/diff": "^1.0",
        "drupal/google_analytics": "^2.2",
        "drupal/image_effects": "^2.1",
        "drupal/moderation_note": "^1.0",
        "drupal/replicate": "1.x-dev",
        "drupal/replicate_ui": "1.x-dev",
        "drupal/responsive_preview": "^1.0",
        "drupal/restui": "^1.15",
        "drupal/revision_log_default": "^1.0",
        "drupal/token": "^1.1",
        "drupal/redirect": "^1.2",
        "drupal/high_contrast": "^1.0",
        "drupal/text_resize": "^1.1",
        "drupal/link_field_autocomplete_filter": "^1.6",
        "drupal/better_links": "^1.0",
        "drupal/twig_vardumper": "^1.1",
        "drupal/dut": "^3.0",
        "drupal/browsersync": "^1.0",
        "drupal/paragraphs_admin": "^1.0",
        "drupal/advagg": "^3.5",
        "drupal/yaml_content": "^1.0",
        "drupal/devel": "^1.2",
        "drupal/styleguide": "^1.0",
        "drupal/bamboo_twig": "^3.3",
        "opin/fitzroy": "*",
        "opin/base": "*",
        "opin/mc": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/OPIN-CA/fitzroy"
        },
        {
            "type": "package",
            "package": {
                "name": "opin/base",
                "version": "dev-master",
                "type":"drupal-custom-theme",
                "source": {
                    "url": "https://github.com/OPIN-CA/base.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "opin/mc",
                "version": "dev-master",
                "type":"drupal-custom-module",
                "source": {
                    "url": "https://github.com/OPIN-CA/mc.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "config": {
        "bin-dir": "bin/",
        "vendor-dir": "vendor/"
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
