{
    "name": "opin/whirlwind",
    "description": "OPIN Whirlwind distribution forked from Acquia's Lighting distrubution",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/drupal-extension": "~3.3.0",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "drupal/coder": "8.*",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",
        "behat/behat": "^3.0",
        "se/selenium-server-standalone": "^2.53",
        "composer/composer": "^1.3",
        "drupal/console": "1.0.1",
        "drupal/media_entity_generic": "^1.0",
        "drupal/devel": "^1.2",
        "drupal/styleguide": "^1.0@alpha"
    },
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "cweagans/composer-patches": "^1.6.0",
        "acquia/lightning": "~2.2.0",
        "drupal/core": "~8.4.0",
        "drush/drush": "^9.0",
        "drupal/adminimal_theme": "^1.3",
        "drupal/admin_toolbar": "^1.20",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/linkit": "^4.3",
        "drupal/paragraphs": "^1.2",
        "drupal/menu_block": "^1.4",
        "drupal/fences": "^2.0@alpha",
        "drupal/module_filter": "^3.1",
        "drupal/field_group": "^1.0",
        "drupal/twig_field_value": "^1.1",
        "drupal/svg_image_field": "^1.0",
        "drupal/workbench_access": "^1.0@alpha",
        "drupal/twig_tweak": "^1.9",
        "drupal/content_access": "^1.0@alpha",
        "drupal/contact_storage": "^1.0@beta",
        "drupal/moderation_sidebar": "^1.0-dev",
        "drupal/scheduler": "^1.0@RC"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ]
    },
    "config": {
        "bin-dir": "bin/",
        "vendor-dir": "vendor/"
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
